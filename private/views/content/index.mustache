{{>html_header}}
<section class="callout">
      <h1>Content Management Page</h1>
</section>
<section>
      <h2>Hero Carousel</h2>
      <script src="/js/carousel.js"></script>

      <section class="content-container" hx-get="/private/functions/interface/content/carousel_form.php" hx-trigger="load"></section>
      <section id="response"></section>
      <section class="content-container carousel-preview" id="carouselPreview" hx-get="/private/functions/interface/content/carousel_edit.php" hx-trigger="load, carouselUpdated from:body"></section>
      <section class="content-container" hx-get="/private/functions/interface/content/carousel_preview.php" hx-trigger="load, carouselUpdated from:body" hx-on::after-settle="startCarousel();"></section>
</section>
<section>
      <h2>Add / Edit Acticle</h2>
      <section class="content-container" hx-get="/private/functions/interface/content/file_form.php" hx-trigger="load" hx-target="this" hx-swap="innerHTML"></section>
      <section class="content-container" id="articleFormContainer" hx-get="/private/functions/interface/content/article_form.php" hx-trigger="load" hx-target="this" hx-swap="innerHTML" hx-on::after-settle="updateArticlePreview()"></section>
      <section class="content-container" hx-get="/private/functions/interface/content/edit_article_form.php" hx-trigger="load, refreshArticleList from:body" hx-target="this" hx-swap="innerHTML"></section>
      <section class="content-container" id="articlePreview">
      <h2>ARTICLE PREVIEW</h2>
      <div id="articlePreviewContainer" class="articlePreview"></div>
      </section>
</section>
{{>html_footer}}